<page
  class="page"
  xmlns="http://schemas.nativescript.org/tns.xsd"
  xmlns:drawer="nativescript-telerik-ui/sidedrawer"
  xmlns:widgets="shared/widgets"
  loaded="loaded"
  class="vtr-section"
  >

  <page.actionBar>
    <action-bar title="NativeScript" class="action-bar">
      <navigation-button icon="res://ic_menu" tap="toggleDrawer" ios:visibility="collapsed" />
      <action-bar.actionItems>
        <ios>
          <action-item icon="res://ic_menu" ios.position="left" tap="toggleDrawer" />
        </ios>
      </action-bar.actionItems>
    </action-bar>
  </page.actionBar>


  <drawer:rad-side-drawer id="drawer" showOverNavigation="true"> 
    <drawer:rad-side-drawer.drawerContent>
      <widgets:drawer-content />
    </drawer:rad-side-drawer.drawerContent>

     <drawer:rad-side-drawer.mainContent>
    

        <StackLayout>
          <Label text="experience the 2017 ninja 650." textWrap="true" class="testvr-experience" />

          <Label text="take a virtual test ride." textWrap="true" class="testvr-testride" />

          <Label text="Along the way youâ€™ll learn about the exciting features that make the Ninja 650 motorcycle a perfect combination of sporty performance and everyday comfort."
              textWrap="true" class="testvr-description" />
            
          <Label text="Move your mobile device to experience 360-degree views." textWrap="true" class="drag-experience-threesixty" />

          <WrapLayout orientation="horizontal" class="vtr-selection-container">

              <StackLayout class="vr-test-ride-selection-container" style="margin-right: 1.8%;">
                  <StackLayout class="vr-video-green-line"></StackLayout>
                  <Image src="~/images/slide2/play-vtr.png" class="vtr-test-ride-play-img" />
                  <Label text="INTERACTIVE RIDE" textWrap="true" class="vr-test-ride-selection-txt" />
              </StackLayout>

                <StackLayout class="vr-test-ride-selection-container">
                    <StackLayout class="vr-video-green-line"></StackLayout>
                    <Image src="~/images/slide2/play-vtr.png" class="vtr-test-ride-play-img" />
                    <Label text="FREE RIDE" textWrap="true" class="vr-test-ride-selection-txt" />
                </StackLayout>

          </WrapLayout>


          <widgets:scroller tap="gotoslidethree" />

        </StackLayout>


      </drawer:rad-side-drawer.mainContent>

  </drawer:rad-side-drawer>

</page>
