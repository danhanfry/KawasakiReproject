<page
  class="page"
  xmlns="http://schemas.nativescript.org/tns.xsd"
  xmlns:drawer="nativescript-telerik-ui/sidedrawer"
  xmlns:widgets="shared/widgets"
  loaded="loaded"
  class="commercial-section"
  >

  <page.actionBar>
    <action-bar title="NativeScript" class="action-bar">
      <navigation-button icon="res://ic_menu" tap="toggleDrawer" ios:visibility="collapsed" />
      <action-bar.actionItems>
        <ios>
          <action-item icon="res://ic_menu" ios.position="left" tap="toggleDrawer" />
        </ios>
      </action-bar.actionItems>
    </action-bar>
  </page.actionBar>


  <drawer:rad-side-drawer id="drawer" showOverNavigation="true"> 
    <drawer:rad-side-drawer.drawerContent>
      <widgets:drawer-content />
    </drawer:rad-side-drawer.drawerContent>

     <drawer:rad-side-drawer.mainContent>
     <!-- Home page contents -->
      <StackLayout class="content-container">
        <Image src="~/images/logo_2017.png" id="commericalNinjaNameYearId" class="ninja-year" />
        <Image src="~/images/logo_ninja.png" id="commericalNinjaNameId" class="ninja-model-name" />
        <Image src="~/images/green_hr.png" id="commericalNinjaLifeGreenHrId" class="ninja-hr" />

        <StackLayout borderRadius="10" borderWidth="1" borderColor="#fff" width="25%" height="15%" class="ninja-play">
            <Image src="~/images/slide1/playButton_ActionArrow.png" id="slideOneArrow" class="ninja-play-arrow" />
        </StackLayout>

        <Label text="Superb balance and exciting performance mark the strengths of the new Ninja 650 sportbike. Sporty handling and aggressive styling stay true to Ninja roots while comfort and convenience make the Ninja 650 an exceptional everyday ride."
              textWrap="true" class="ninja-description" />
        
        <widgets:scroller tap="gotoslidetwo" />
        
        <label class="h2 m-20 text-center" text="{{ text }}" />
      </StackLayout>
      </drawer:rad-side-drawer.mainContent>

  </drawer:rad-side-drawer>

</page>
