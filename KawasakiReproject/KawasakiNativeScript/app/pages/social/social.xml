<page
  xmlns="http://schemas.nativescript.org/tns.xsd"
  xmlns:drawer="nativescript-telerik-ui/sidedrawer"
  xmlns:widgets="shared/widgets"
  xmlns:statusbar="nativescript-statusbar"
  loaded="pageLoaded"
  class="social-section">

  <statusbar:StatusBar ios:barStyle="light" />

  <page.actionBar>
    <action-bar title="Kawasaki Ninja 650">
      <navigation-button icon="res://ic_menu" tap="toggleDrawer" ios:visibility="collapsed" />
    </action-bar>
  </page.actionBar>

  <drawer:rad-side-drawer id="drawer">
    <drawer:rad-side-drawer.mainContent>

      <!-- Home page contents -->
      <StackLayout>
        
          <!--<AbsoluteLayout>
              <StackLayout id="leftGreenLineId" class="social-rdn-green-line" left="0" top="0"></StackLayout>
              <StackLayout id="rightGreenLineId" class="social-rdn-green-line" left="socialLineRightPosition" top="110"></StackLayout>
          </AbsoluteLayout>-->

          <AbsoluteLayout>
            <Label text="#NINJALIFE" textWrap="true" top="60" class="ninja-life-text" />
            <StackLayout class="social-gray-bg" top="40"></StackLayout>
            <Label text="community" textWrap="true" top="85" class="social-community-txt" />
            <Label text="submission guidelines" textWrap="true" top="105" 
                    class="social-guidelines-txt" tap="opensubmissionguidelines" />
          </AbsoluteLayout>

          <Label style="color: #fff;" text="{{ viewModel.test }}" />
          <WrapLayout orientation="horizontal">
              <Repeater items="{{ socialTiles }}">
                  <Repeater.itemsLayout>
                      
                  </Repeater.itemsLayout>
              </Repeater>
          </WrapLayout>
        
      </StackLayout>

    </drawer:rad-side-drawer.mainContent>
    <drawer:rad-side-drawer.drawerContent>
      <widgets:drawer-content />
    </drawer:rad-side-drawer.drawerContent>
  </drawer:rad-side-drawer>

</page>
